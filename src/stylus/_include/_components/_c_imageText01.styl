//- コンポーネント - 画像+テキストコンポーネント01
.c-imageText01
	PADDING = 20px
	marginBottom(60)

	&.is-imageRight
		+MQ_PC(SP_RES_WID)
			display flex
			justify-content space-between
			.imageBlock
				order 1
				padding-left PADDING

	&.is-imageLeft
		+MQ_PC(SP_RES_WID)
			display flex
			.imageBlock
				padding-right PADDING
	
	&.is-imageCenter
		.imageBlock
			margin-bottom PADDING
			text-align center

			figcaption
				text-align left
			
	.imageBlock
		+MQ_SP(SP_RES_WID)
			width 100%
			padding 0
	
	.textBlock
		width 100%
	
	
	.m-imageSet01
		+MQ_SP(SP_RES_WID)
			width 100%
		
		img
			max-width inherit
			+MQ_SP(SP_RES_WID)
				max-width 100%