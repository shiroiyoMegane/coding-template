.c-pagerSet
	marginBottom(60)

	ul
		flexBox()
		justify-content center

	li
		width 50px
		height 50px
		margin 0 5px
		+MQ_SP(SP_RES_WID)
			width 40px
			height 40px
			margin 0 3px

	a
		display block
		width 100%
		height 100%
		color #fff
		text-decoration none

		.box
			background-color #333
	
	.box
		flexBox()
		width 100%
		height 100%
		justify-content center
		align-items center
		background-color #efefef
		fontSize(14)
		line-height 1.0

		+MQ_SP(SP_RES_WID)
			fontSize(13)