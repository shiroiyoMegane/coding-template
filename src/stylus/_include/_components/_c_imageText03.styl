//- コンポーネント - 画像+テキストコンポーネント03
.c-imageText03
	PADDING = 20px
	IMAGE_WIDTH = 700px

	border 1px solid SITE_COLOR02

	&.is-imageRight
		+MQ_PC(SP_RES_WID)
			display flex
			align-items center
			.imageBlock
				order 1

	&.is-imageLeft
		+MQ_PC(SP_RES_WID)
			display flex
			align-items center
	
	.imageBlock
		background-position center center
		background-repeat no-repeat
		background-size cover
		+MQ_PC(SP_RES_WID)
			width IMAGE_WIDTH
			min-height 340px
		+MQ_SP(SP_RES_WID)
			width 100%
			padding-top 50%
	
	.textBlock
		padding 15px
		box-sizing border-box
		+MQ_PC(SP_RES_WID)
			width 'calc(100% - %s)' % IMAGE_WIDTH
	
	
	.m-imageSet01
		+MQ_SP(SP_RES_WID)
			width 100%
		
		img
			max-width inherit
			+MQ_PC(SP_RES_WID)
				width inherit
			+MQ_SP(SP_RES_WID)
				max-width 100%