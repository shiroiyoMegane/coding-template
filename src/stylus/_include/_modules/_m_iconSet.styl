//- モジュール - アイコンセット
iconOption()
	&:before, &:after
		display inline-block
		width 16px
		height 16px
		margin 0 4px
		background-repeat no-repeat
		background-size cover
		vertical-align middle
	&:after
		content ""
	
	&.icon-before
		&:before
			content ""
		&:after
			content none

outerHashIcon()
	&:before, &:after
		transform translate3d(0, -50%, 0) rotate(90deg)
	&[href*=".html"]
		&:before, &:after
			transform translate3d(0, -50%, 0) rotate(0)

outerIcon()
	&:before, &:after
		background-image url('../images/common/common_icon_outer01.svg')

