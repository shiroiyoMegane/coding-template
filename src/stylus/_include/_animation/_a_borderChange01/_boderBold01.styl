//- ボックスボーダー01 - ボールド01
&.is-boderBold01
	border none
	transition 0.5s all ease
	&:before
		content ""
		display block
		position absolute
		left 0
		bottom 0
		width 100%
		height 100%
		border 1px solid SITE_COLOR01
		box-sizing border-box
		transition 0.3s all ease

	&:hover, &.is-inview
		&:before
			border-width 5px