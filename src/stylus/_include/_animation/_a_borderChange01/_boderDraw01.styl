//- ボックスボーダー01 - ドロー01
&.is-boderDraw01
	&:before, &:after
		content ""
		display block
		position absolute
		width 0
		height 0
		box-sizing border-box
		border 1px solid transparent

	&:before
		top 0
		left 0
	&:after
		bottom 0
		right  0
	
	&:hover, &.is-inview
		&:before, &:after
			width 100%
			height 100%
		&:before
			border-top-color SITE_COLOR01
			border-right-color SITE_COLOR01
			transition width 0.25s ease-out, height 0.25s ease-out 0.25s
		&:after
			border-bottom-color SITE_COLOR01
			border-left-color SITE_COLOR01
			transition border-color 0s ease-out 0.5s, width 0.25s ease-out 0.5s, height 0.25s ease-out 0.75s
