//- ボックスボーダー01 - ボトム - スライドライト01
&.is-boderBottomRight01
	&:before
		content ""
		display block
		position absolute
		left 0
		bottom 0
		width 100%
		height 3px
		background-color SITE_COLOR01
		transform-origin left
		transform scaleX(0)
		transition 0.5s all ease
		
	&:hover, &.is-inview
		&:before
			transform scaleX(1.0)