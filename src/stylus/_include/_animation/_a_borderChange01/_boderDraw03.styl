//- ボックスボーダー01 - ドロー03
&.is-boderDraw03
	&:before, &:after
		content ""
		display block
		position absolute
		width 100%
		height 100%
		box-sizing border-box
		transition 0.5s all ease

	&:before
		top 0
		left 0
		border-top 1px solid SITE_COLOR01
		border-bottom 1px solid SITE_COLOR01
		transform scale(0,1)
		
	&:after
		top 0
		left  0
		border-left 1px solid SITE_COLOR01
		border-right 1px solid SITE_COLOR01
		transform scale(1,0)
	
	&:hover, &.is-inview
		&:before, &:after
			width 100%
			height 100%
			transform scale(1,1)