&.is-slideCenterIn01
	&:before, &:after
		content ""
		display block
		position absolute
		top 0
		width 50%
		height 100%
		background-color SITE_COLOR01
		transform scaleX(0)
		transition 0.3s all ease
		z-index -1
	
	&:before
		left 0
		transform-origin left top

	&:after
		right 0
		transform-origin right top

	&:hover, &.is-inview
		&:before, &:after
			transform scaleX(1.0)
		a
			color SITE_BG01