&.is-slideBottom01
	overflow hidden

	&:after
		content ""
		display block
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		background-color SITE_COLOR01
		transform translate3d(0,-100%,0)
		transition 0.3s all ease
		z-index -1

	&:hover, &.is-inview
		&:after
			transform translate3d(0,0,0)
		a
			color SITE_BG01