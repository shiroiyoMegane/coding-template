//- 複合コンポーネント - QandAセット01
.m-qandaList01
	.moduleWrapper
		&>.block
			display flex
			flex-wrap wrap
			width 100%

			&.is-question
				background-color #efefef
				.icon
					background-color #cfcfcf

				.area.is-text
					display flex
					flex-wrap wrap
					align-items center
					position relative
					padding-right 50px

					&:after
						content ""
						display block
						position absolute
						top 50%
						right 15px
						width 30px;
						height 30px;
						margin-top -15px
						background-color #DFDFDF
			
			&.is-answer
				.icon
					background-color #dfdfdf

			&>.area
				&.is-text
					width calc(100% - 60px)
					padding 15px
					box-sizing border-box

	.icon
		display flex
		flex-wrap wrap
		justify-content center
		align-items center
		width 60px
		min-height 60px
		height 100%
