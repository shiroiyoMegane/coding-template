//- コンポーネント - 画像+テキストコンポーネント04
.c-bgContentsSet01
	IMAGE_WIDTH = 700px
	margin-bottom 60px
	&:last-child
		margin-bottom 0

	&.is-imageFixed
		.componentWrapper
			&>.group
				&>.block
					&.is-image
						+MQ_MIN(SP_RES_WID01)
							width IMAGE_WIDTH
						+MQ_MAX(SP_RES_WID01)
							width 100%
							padding-top 50%
							margin-bottom 10px
							padding 0
					&.is-contents
						+MQ_MIN(SP_RES_WID01)
							width 60%
							min-width 400px
							margin 0

		&.is-contentsLeft
			.block
				&.is-image
					right 0

		&.is-contentsRight
			.group
				&.is-primary
					justify-content flex-end
			.block
				&.is-image
					left 0

	.componentWrapper
		&>.group
			&.is-primary
				display flex
				align-items center
				position relative
				overflow hidden
				min-height 300px

			&>.block
				
				&.is-image
					position absolute
					width 100%
					height 100%

				&.is-contents
					position relative
					z-index 1
					width calc(100% - 20px)
					margin 0 auto
					padding 10px
					box-sizing border-box
					background-color rgba(255,255,255,0.8)
					
					+MQ_MIN(SP_RES_WID01)
						height 100%
					+MQ_MAX(SP_RES_WID01)
						width 80%

				&>.area
					&.is-image
						position absolute
						top 0
						left 0
						width 100%
						height 100%
						background-position center center
						background-repeat no-repeat
						background-size cover

	.com-btn
		margin-bottom 10px
		display table
		+MQ_MIN(SP_RES_WID01)
			min-width 300px
		+MQ_MAX(SP_RES_WID01)
			width 100%
		&:last-child
			margin-bottom 0