.m-borderRightTitle01
	margin-bottom 30px
	&:last-child
		margin-bottom 0


	.com-title
		position relative
		width 100%
		line-height 1.0
		
		
		&:before
			content ""
			position absolute
			top 50%
			right 0
			width 100%
			height 2px
			background-color #ccc

		span
			position relative
			background-color #fff
			fontSize(18)
			padding-right 10px
			font-weight bold
			line-height 1.0
			z-index 1
			+MQ_MAX(SP_RES_WID01)
				display block
				margin-bottom 5px
				&:last-child
					margin-bottom 0
			
			&.is-large
				fontSize(22)
			&.is-small
				fontSize(14)

	.titleBefore
		order -1
		+MQ_MAX(SP_RES_WID01)
			margin-bottom 10px
	.titleAfter
		order 1
		+MQ_MAX(SP_RES_WID01)
			margin-top 10px