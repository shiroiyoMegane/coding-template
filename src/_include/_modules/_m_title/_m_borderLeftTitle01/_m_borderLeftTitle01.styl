.m-borderLeftTitle01
	position relative
	display flex
	justify-content space-between
	align-items center
	margin-bottom 30px
	padding-left 10px
	
	+MQ_MAX(SP_RES_WID01)
		margin-bottom 20px

	&:before
		content: ""
		position absolute
		top 0
		left 0
		display block
		width 3px
		height 100%
		background-color #CCC

	&.is-center
		.com-title
			align-items center
			text-align center
			+MQ_MAX(SP_RES_WID01)
				flex-direction column

	&:last-child
		margin-bottom 0


	.com-title
		width 100%
		line-height 1.0
		box-sizing border-box
		fontSize(20)
		
		span
			fontSize(18)
			margin-right 10px
			font-weight bold
			line-height 1.0
			+MQ_MAX(SP_RES_WID01)
				display block
				margin-bottom 5px
				&:last-child
					margin-bottom 0
			
			&:last-child
				margin-right 0
			&.is-large
				fontSize(22)
			&.is-small
				fontSize(14)

	.titleBefore
		order -1
		+MQ_MAX(SP_RES_WID01)
			margin-bottom 10px
	.titleAfter
		order 1
		+MQ_MAX(SP_RES_WID01)
			margin-top 10px