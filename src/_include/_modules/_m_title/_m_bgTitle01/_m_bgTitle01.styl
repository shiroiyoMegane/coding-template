.m-bgTitle01
	display flex
	justify-content space-between
	align-items center
	margin-bottom 30px
	padding 10px
	color #FFF
	background-color #000

	&>div
		flex-shrink 0
		
	+MQ_MAX(SP_RES_WID01)
		flex-direction column
	
	&.is-center
		.com-title
			text-align center

	&:after
		+MQ_MAX(SP_RES_WID01)
			content ""
			display block
			width 100%
			order 1
	
	.com-title
		width 100%
		line-height 1.0
		
		span
			fontSize(18)
			margin-right 10px
			line-height 1.0
			+MQ_MAX(SP_RES_WID01)
				display block
				margin-bottom 5px
				&:last-child
					margin-bottom 0
					
			&:last-child
				margin-right 0
			&.is-large
				fontSize(22)
			&.is-small
				fontSize(14)

	.titleBefore
		order -1
		+MQ_MAX(SP_RES_WID01)
			margin-bottom 10px
	.titleAfter
		order 1
		+MQ_MAX(SP_RES_WID01)
			margin-top 10px