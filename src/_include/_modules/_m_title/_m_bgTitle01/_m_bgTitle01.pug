mixin m-bgTitle01(tg)
	-
		var op = {
			tag:       tg.tag ? tg.tag : "div",
			baseName:  tg.baseName ? tg.baseName : "m-bgTitle01",
			className: tg.className ? " " + tg.className : "",
		}
	div( class = op.baseName + op.className ).is-module
		#{op.tag}.com-title
			if tg.largeTitle
				span.is-large!= tg.largeTitle
			if tg.title
				span.is-title!= tg.title
			if tg.smallTitle
				span.is-small!= tg.smallTitle
		block