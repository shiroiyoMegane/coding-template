.m-canvasCircle01
	display table
	margin-bottom 60px

	&:last-child
		margin-bottom 0
	
	$primaryGroup
		display flex
		align-items center

	$canvasBlock
		position relative
		line-height 0
		&:before
			content ""
			display block
			position absolute
			top 50%
			left 50%
			width 20px
			height 20px
			margin -10px 0 0 -10px
			background-color #FF0
			transition all 0.5s ease
		&:after
			content ""
			display block
			position absolute
			top 50%
			right -5px
			width 20px
			height 4px
			margin-top -2px
			background-color #F00
			transition all 0.5s ease
			transform scaleX(0)
			transform-origin left center
			transition all 0.5s ease
		canvas
			// transform rotate(90deg);
			width 100px
			height 100px
			transition all 0.5s ease

	$textBlock
		margin-left -15px
		transition all 0.5s ease

	a
		display block
		color inherit
		text-decoration none
		&:hover
			.is-circle
				&:before
					background-color #F00 !important
				&:after
					transform scaleX(1.0) !important
				// canvas
				// 	transform rotate(180deg) !important
			.is-text
				margin-left 20px !important

		&>.group
			&.is-primary
				@extend $primaryGroup
			&>.block
				&.is-circle
					@extend $canvasBlock
				&.is-text
					@extend $textBlock