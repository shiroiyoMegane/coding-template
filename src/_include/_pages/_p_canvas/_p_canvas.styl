.canvas-sliderSet
	position relative
	overflow hidden
	canvas
		color #FFF
	.textBlock
		position absolute
		top 0
		left 0
		width 480px
		height 100%
		padding 80px 55px
		box-sizing border-box
		+MQ_SP(SP_RES_WID01)
			width 100%

		.topArea
			display flex
			justify-content space-between
			align-items center
			margin-bottom 50px
			padding-top 10px
			border-top 2px solid #FFF
			+MQ_SP(SP_RES_WID01)
				border-top none
		.btnArea
			display flex
			+MQ_SP(SP_RES_WID01)
				position absolute
				right 30px
				bottom 30px
			.pager
				cursor pointer
				display flex
				justify-content center
				align-items center
				width 40px
				height 40px
				margin-left 10px
				border-radius 100px
				border 1px solid #F2F2F2
				color #F2F2F2
		.subTitle
			color #FFF
		.title
			margin-bottom 40px
			color #FFF
			fontSize(60)
			font-weight bold
			line-height 1.2
		.text
			margin-bottom 70px
			color #FFF
			fontSize(15)
		.btn
			a
				display block
				padding 20px
				box-sizing border-box
				background-color #FFF
				color inherit
				text-decoration none




